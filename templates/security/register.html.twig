{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(registrationForm, { 'attr': { 'class': 'col-4 offset-4' }}) }}
        <h1 class="h3 mb-3 text-dark font-weight-light">Register</h1>
        {{ form_errors(registrationForm.username) }}
        {{ form_errors(registrationForm.plainPassword) }}
        {{ form_widget(registrationForm.username, { 'attr': {
            'class': 'form-control login__input--top',
            'placeholder': 'Username'
        }}) }}
        {{ form_widget(registrationForm.plainPassword, { 'attr': {
            'class': 'form-control login__input--bottom',
            'placeholder': 'Password'
        }}) }}
        {{ form_row(registrationForm.submit, { 'attr': { 'class': 'btn btn-primary' }}) }}
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
