{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block javascripts %}
<script defer src="{{ asset('js/posts.js') }}"></script>
{% endblock %}

{% block body %}
<main class="container">

    <header class="py-3 border-bottom mb-4">
        <div class="row d-flex">
            <div class="col-2"></div>
            <div class="col-8 text-center text-dark">
                <h1 class="nav__title">Richard's Tea Party</h1>
            </div>
            <nav class="col-2 d-flex justify-content-end">
                <div class="dropdown d-flex align-items-center">
                    <button class="btn btn-secondary dropdown-toggle" id="nav__user-menu" type="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ currentUser.username }}
                    </button>
                    <div class="dropdown-menu" aria-labelledby="nav__user-menu">
                        <a class="dropdown-item" href="{{ url('app_logout') }}">Logout</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#new-post" aria-expanded="false"
                aria-controls="new-post">New post</button>
    </div>
    <div id="new-post" class="collapse text-white bg-dark p-4 rounded mb-4">
        <h2 class="new-post__title mb-4">Create a new post</h2>
        {{ form_start(createPostForm) }}
            <div class="form-group">
                {{ form_label(createPostForm.title) }}
                {{ form_widget(createPostForm.title, { 'attr': { 'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(createPostForm.text) }}
                {{ form_widget(createPostForm.text, { 'attr': { 'class': 'form-control mb-3' }}) }}
            </div>
            {{ form_widget(createPostForm.submit, { 'attr': { 'class': 'btn btn-primary' }}) }}
        {{ form_end(createPostForm) }}
    </div>

    <div class="row">
        {% for post in posts %}
            <div class="col-md-6">
                <div class="post card shadow-sm mb-4">
                    <div class="card-body p-4 d-flex flex-column">
                        <strong class="text-primary">{{ post.user.username }}</strong>
                        <h2 class="post__title card-title">{{ post.title }}</h2>
                        <div class="card-subtitle mb-2 post__time text-muted">
                            {{ timeService.formatForDisplay(post.createdDateTime) }}
                            {% if post.updatedDateTime is not null %}
                                (Edited {{ timeService.formatForDisplay(post.updatedDateTime) }})
                            {% endif %}
                        </div>
                        <p class="post__text card-text">{{ post.text }}</p>
                        <a href="#" class="post__link card-link">Continue reading</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

</main>
{% endblock %}
